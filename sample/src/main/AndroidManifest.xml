<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.alexvasilkov.foldablelayout.sample">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="CMS"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">

        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.UnfoldableDetailsActivity"
            android:label="Unfoldable details" />

        <activity
            android:name=".activities.FoldableListActivity"
            android:label="Foldable list" />

        <activity
            android:name=".activities.CardEditActivity"
            android:label="Edit Card" />

    </application>

</manifest>
